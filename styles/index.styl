.contentContainer
  max-width 1300px
  margin 0 auto

.hero
  width 100%
  color #333

.title
  margin 0
  width 100%
  padding-top 80px
  line-height 1.15
  font-size 48px

.title
  font-family 'Noto Serif', 'Times New Roman', Helvetica, Arial, sans-serif
  text-align center

.subtitle
  text-align center
  font-family 'Noto Serif', 'Helvetica Neue', Helvetica, Arial, sans-serif
